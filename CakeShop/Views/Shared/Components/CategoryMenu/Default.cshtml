@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var cat in Model)
        {
            <li>
                <a asp-controller="Pie" asp-action="List" asp-route-category="@cat.CategoryName">@cat.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
        <a asp-controller="Pie" asp-action="List" asp-all-Category="">View all pies</a></li>
    </ul>
</li>